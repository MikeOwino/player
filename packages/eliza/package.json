{
  "name": "@vidstack/eliza",
  "version": "1.4.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "bin": {
    "eliza": "cli.js"
  },
  "exports": {
    ".": "./dist-node/index.js",
    "./cli.js": "./cli.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "wireit",
    "build:dist": "wireit",
    "build:types": "wireit",
    "build:base": "node ../../.scripts/build.js --entry=src/index.ts",
    "clean": "rimraf dist-node types",
    "watch": "pnpm build watch",
    "lint:eslint": "wireit",
    "lint:prettier": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:dist",
        "build:types"
      ]
    },
    "build:dist": {
      "files": [
        "src/**",
        "tsconfig.json"
      ],
      "command": "pnpm build:base -- --outdir=dist-node --platform=node --bundle --requireshim --external=yargs,@vidstack/foundation,typescript",
      "output": [
        "dist-node/**"
      ],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    },
    "build:types": {
      "clean": "if-file-deleted",
      "files": [
        "src/**",
        "tsconfig.json"
      ],
      "command": "tsc -p tsconfig.json --pretty",
      "output": [
        "types/**",
        "tsconfig.tsbuildinfo"
      ],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    },
    "lint:eslint": {
      "files": [
        "src/**"
      ],
      "command": "eslint src --fix",
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    },
    "lint:prettier": {
      "files": [
        "src/**"
      ],
      "command": "prettier src --write --loglevel warn",
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    }
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/lru-cache": "^7.4.0",
    "@types/node": "^17.0.17",
    "@types/normalize-path": "^3.0.0",
    "@types/read-pkg-up": "^6.0.0",
    "@types/yargs": "^17.0.8",
    "@vidstack/foundation": "workspace:*",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "fs-extra": "^10.0.0",
    "globby": "^13.1.1",
    "kleur": "^4.1.4",
    "lru-cache": "^7.4.4",
    "normalize-path": "^3.0.0",
    "read-pkg-up": "^9.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  }
}
